<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    android:orientation="vertical"
    tools:context=".fogotpass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bpass"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/groupkkk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView127"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:srcCompat="@drawable/asset" />

        <ImageView
            android:id="@+id/imageView129"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/z" />

        <TextView
            android:id="@+id/textView120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:text="ลืมรหัสผ่าน"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView121"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:text="กรอกหมายเลขโทรศัพท์ของคุณ หรือ "
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView122"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:text="Email เพื่อขอหมายเลข OTP   "
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextEmailAddress4"
            android:layout_width="277dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bggggg"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:inputType="textEmailAddress"
            android:textColor="#8A7155" />

        <Button
            android:id="@+id/gotpass"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bggggg"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:text="รับรหัส OTP"
            android:textColor="#8A7155"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>