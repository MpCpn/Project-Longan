<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bre"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/groupk" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="130dp"
            android:layout_weight="1"
            android:fontFamily="@font/itim"
            android:text="สมัครสมาชิก"
            android:textColor="#475B5A"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/groupaaa" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt1"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="ชื่อผู้ใช้งาน"
            android:inputType="textPersonName"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt1"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="ชื่อ"
            android:inputType="textPersonName"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt1"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="นามสกุล"
            android:inputType="textPersonName"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="264dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/itim"
            android:text="ระบุเพศ :"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/itim"
            android:text="จังหวัด :"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/bt1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bggggg"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="อีเมล"
            android:inputType="textEmailAddress"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt1"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="รหัสผ่าน"
            android:inputType="textPassword"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C" />

        <EditText
            android:id="@+id/editTextTextPassword4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt1"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:hint="ยืนยันรหัสผ่าน"
            android:inputType="textPassword"
            android:textColor="#B3563413"
            android:textColorHint="#9E958C" />

        <Button
            android:id="@+id/register"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn"
            android:fontFamily="@font/itim"
            android:text="บันทึก"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>